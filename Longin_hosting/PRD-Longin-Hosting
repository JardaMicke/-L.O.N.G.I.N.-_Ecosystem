    â””â”€â”€â”€â”¬â”€â”€â”€â”˜ â””â”€â”€â”€â”€â”€â”€â”€â”€â”˜ â”‚cache â”‚ â””â”€â”€â”¬â”€â”€â”€â”˜
        â”‚                â””â”€â”€â”€â”€â”€â”€â”˜    â”‚
        â”‚                           â”‚
        â–¼                           â–¼
    â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”  â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
