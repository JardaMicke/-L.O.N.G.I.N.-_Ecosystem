{
  "name": "candy-ai-installer-tests",
  "version": "1.0.0",
  "description": "Tests for Candy AI Installer",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "test:auto-repair": "node auto-repair.test.js",
    "test:browser": "open test-suite.html"
  },
  "author": "Candy AI Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "../utils/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}