{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
        "<rootDir>/src"
    ],
    "testMatch": [
        "**/*.test.ts"
    ],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1",
        "^@types/(.*)$": "<rootDir>/src/types/$1",
        "^@services/(.*)$": "<rootDir>/src/services/$1",
        "^@utils/(.*)$": "<rootDir>/src/utils/$1"
    },
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov",
        "html"
    ]
}