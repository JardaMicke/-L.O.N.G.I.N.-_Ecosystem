# =========================================================
# L.O.N.G.I.N. ECOSYSTEM - UNIFIED ENVIRONMENT CONFIGURATION
# =========================================================
# Tento soubor obsahuje sjednocenou konfiguraci pro všechny moduly
# Datum: 2026-01-19
# =========================================================

# ========== GLOBAL ==========
NODE_ENV=development
LOG_LEVEL=debug
ECOSYSTEM_VERSION=2.0.0

# ========== LONGIN CORE (Command Center) ==========
LONGIN_CORE_API_PORT=3001
LONGIN_CORE_WEBSOCKET_PORT=3002
LONGIN_CORE_HOST=localhost

# ========== LONGIN UI (Dashboard) ==========
LONGIN_UI_PORT=3000

# ========== LONGIN CHARACTER (AI Agent) ==========
LONGIN_CHARACTER_PORT=3010
LONGIN_CHARACTER_BACKEND_PORT=3011

# ========== LONGIN BRIDGE (Browser-OS) ==========
LONGIN_BRIDGE_PORT=5001

# ========== LONGIN GAME ENGINE ==========
LONGIN_GAME_SERVER_PORT=3020
LONGIN_GAME_WEBSOCKET_PORT=3021

# ========== DATABASE (PostgreSQL) ==========
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=longin
DATABASE_PASSWORD=longin_secure_password_change_in_production
DATABASE_NAME=longin_db

# ========== REDIS ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ========== JWT SECRETS ==========
# DŮLEŽITÉ: Změnit v produkci!
JWT_ACCESS_SECRET=your_super_secret_access_key_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ========== INTERNAL API ==========
# Pro service-to-service komunikaci
INTERNAL_API_SECRET=longin_internal_secret_change_in_production

# ========== LLM PROVIDERS ==========
# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=dolphin-mistral

# OpenAI (Cloud - optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Anthropic (Cloud - optional)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet

# ========== STABLE DIFFUSION (Image Generation) ==========
SD_BASE_URL=http://localhost:7860

# ========== DOCKER ==========
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_HOST=unix:///var/run/docker.sock

# ========== MONITORING ==========
PROMETHEUS_PORT=9090
GRAFANA_PORT=3004
GRAFANA_ADMIN_PASSWORD=admin
LOKI_PORT=3100

# ========== FRONTEND URLS ==========
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_SOCKET_URL=http://localhost:3001

# ========== GITHUB (Optional) ==========
GITHUB_API_TOKEN=
GITHUB_WEBHOOK_SECRET=

# ========== DEPLOYMENT ==========
DEPLOYMENT_ENV=development
DEPLOYMENT_URL=https://longin.example.com
